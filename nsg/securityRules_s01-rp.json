{
  "$schema": "https://raw.githubusercontent.com/FabienGilbert/AzureHub/master/nsg/nsgSecRules_schema.json",
  "parameters": {
    "nsgTier": {
      "value": "RP"
    },
    "securityRulesDefinition": {
      "value": [
        {
          "direction": "inbound",
          "priority": 210,
          "name": "AllowJumpServersInBound",
          "description": "Allow Jump Servers InBound",
          "access": "allow",
          "protocol": "*",
          "sourceAddressPrefixes": {
            "parameter": "subnetPrefixRP"            
          },
          "destinationAddressPrefixes": {
            "value": [
              "VirtualNetwork"
            ]
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "*"
          ]
        },
        {
          "direction": "inbound",
          "priority": 240,
          "name": "AllowInBoundHttps",
          "description": "Allow InBound HTTPS traffic",
          "access": "allow",
          "protocol": "tcp",
          "sourceAddressPrefixes": {
            "value": ["*"]
          },
          "destinationAddressPrefixes": {
            "value":[
              "VirtualNetwork"
            ]
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "443"
          ]
        },
        {
          "direction": "inbound",
          "priority": 1980,
          "name": "DenyInBoundVnetUDP",
          "description": "Deny Inbound UDP Traffic from all Azure and on-premises subnets.",
          "access": "deny",
          "protocol": "udp",
          "sourceAddressPrefixes": {
            "value": [
              "VirtualNetwork"
            ]            
          },
          "destinationAddressPrefixes": {
            "value": [
              "VirtualNetwork"
            ]
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "*"
          ]
        },
        {
          "direction": "inbound",
          "priority": 1990,
          "name": "DenyInBoundVnetTCP",
          "description": "Deny Inbound TCP Traffic from all Azure and on-premises subnets.",
          "access": "deny",
          "protocol": "tcp",
          "sourceAddressPrefixes": {
            "value": [
              "VirtualNetwork"            
            ]
          },
          "destinationAddressPrefixes": {
            "value": [
              "VirtualNetwork"
            ]
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "*"
          ]
        },
        {
          "direction": "outbound",
          "priority": 200,
          "name": "AllowOutBoundIntraSubnetTraffic",
          "description": "Allow OutBound Intra-Subnet Traffic InBound",
          "access": "allow",
          "protocol": "*",
          "sourceAddressPrefixes": {
            "value": [
              "VirtualNetwork"            
            ]
          },
          "destinationAddressPrefixes": {
            "parameter": "subnetPrefixAP"
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "*"
          ]
        },        
        {
          "direction": "outbound",
          "priority": 220,
          "name": "AllowOutBoundDNS",
          "description": "Allow OutBound DNS traffic to the Domain Controllers",
          "access": "allow",
          "protocol": "tcp",
          "sourceAddressPrefixes": {
            "value":[
              "VirtualNetwork"
            ]          
          },
          "destinationAddressPrefixes": {
            "parameter": "subnetPrefixDS"
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "53"
          ]
        },
        {
          "direction": "outbound",
          "priority": 230,
          "name": "AllowOutBoundDnsUdp",
          "description": "Allow OutBound Active Directory DNS UDP traffic to the Domain Controllers",
          "access": "allow",
          "protocol": "udp",
          "sourceAddressPrefixes": {
            "value":[
              "VirtualNetwork"
            ]          
          },
          "destinationAddressPrefixes": {
            "parameter": "subnetPrefixDS"
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "53",
            "123"
          ] 
        },
        {
          "direction": "outbound",
          "priority": 250,
          "name": "AllowOutBoundADFS",
          "description": "Allow OutBound HTTPS traffic to ADFS servers",
          "access": "allow",
          "protocol": "tcp",
          "sourceAddressPrefixes": {
            "value": [
              "VirtualNetwork"
            ]
          },
          "destinationAddressPrefixes": {
            "parameter": "subnetPrefixFS"
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "443"
          ]
        },
        {
          "direction": "outbound",
          "priority": 1980,
          "name": "DenyOutBoundVnetTCP",
          "description": "Deny Outbound TCP Traffic to all Azure and on-premises subnets.",
          "access": "deny",
          "protocol": "tcp",
          "sourceAddressPrefixes": {
            "value": [
              "VirtualNetwork"            
            ]
          },
          "destinationAddressPrefixes": {
            "value": [
              "VirtualNetwork"
            ]
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "*"
          ]
        },
        {
          "direction": "outbound",
          "priority": 1990,
          "name": "DenyOutBoundVnetUDP",
          "description": "Deny Outbound UDP Traffic to all Azure and on-premises subnets.",
          "access": "deny",
          "protocol": "udp",
          "sourceAddressPrefixes": {
            "value": [
              "VirtualNetwork"            
            ]
          },
          "destinationAddressPrefixes": {
            "value": [
              "VirtualNetwork"
            ]
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "*"
          ]
        }
      ]
    }
  }
}