          "protocol": "tcp",
          "sourceAddressPrefixes": {
            "value": [
              "VirtualNetwork"            
            ]
          },
          "destinationAddressPrefixes": {
            "value": [
              "VirtualNetwork"
            ]
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "*"
          ]
        },
        {
          "direction": "outbound",
          "priority": 240,
          "name": "AllowOutBoundTrafficToSupernet",
          "description": "Allow OutBound Traffic to Environment Supernet",
          "access": "allow",
          "protocol": "*",
          "sourceAddressPrefixes": {
            "value": [
              "VirtualNetwork"            
            ]
          },
          "destinationAddressPrefixes": {
            "parameter": "environmentSupernet"
          },
          "sourcePortRanges": [
            "*"
          ],
          "destinationPortRanges": [
            "*"
