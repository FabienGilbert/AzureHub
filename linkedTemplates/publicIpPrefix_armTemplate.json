{ 
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Public IP prefix location"
            }  
        },
        "sku": {
            "type": "string",
            "defaultValue": "Standard",
            "metadata": {
                "description": "Public IP prefix SKU"
            }  
        },
        "tier": {
            "type": "string",
            "defaultValue": "Regional",
            "metadata": {
                "description": "Public IP Prefix tier"
            }  
        },
        "ipPrefixName": {
            "type": "string",
            "metadata": {
                "description": "Public IP prefix name"
            }  
        },
        "publicIpAddressVersion": {
            "type": "string",
            "allowedValues": ["IPv4","IPv6"],
            "defaultValue": "IPv4",
            "metadata": {
                "description": "Public IP prefix version"
            }  
        },
        "prefixLength":{
            "type": "int",
            "minValue": 24,
            "maxValue": 31,
            "metadata": {
                "description": "Public IP prefix size"
            }  
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "Tag object"
            }  
        }
     },
    "variables": {  
     },
    "resources": [
        {
            "name": "[parameters('ipPrefixName')]",
            "type": "Microsoft.Network/publicIPPrefixes",
            "apiVersion": "2019-11-01",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "sku": {
              "name": "[parameters('sku')]",
              "tier": "[parameters('tier')]"
            },
            "properties": {
              "publicIPAddressVersion": "[parameters('publicIpAddressVersion')]",
              "prefixLength": "[parameters('prefixLength')]"
            }
        }        
    ]
}
    